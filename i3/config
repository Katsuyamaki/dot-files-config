# Auto Startup
exec_always --no-startup-id polybar
exec --no-startup-id picom
exec feh --bg-center $HOME/black.png
exec --no-startup-id xfce4-terminal

# Keyboard
exec xset r rate 155 27

# Mouse Focus
focus_follows_mouse no

client.focused #c6c6c6 #1f1f1f #c6c6c6 #DDDDDD #DDDDDD
client.focused_inactive #c6c6c6 #1f1f1f #c6c6c6 #DDDDDD #DDDDDD
client.unfocused #c6c6c6 #1f1f1f #c6c6c6 #DDDDDD #DDDDDD
client.urgent #c6c6c6 #1f1f1f #c6c6c6 #DDDDDD #DDDDDD
client.placeholder #c6c6c6 #1f1f1f #c6c6c6 #DDDDDD #DDDDDD
client.background #1f1f1f

# No Border
for_window [class="^.*"] border pixel 0
new_window 1pixel

# Rofi
#bindsym $alt+r exec --no-startup-id rofi -show combi -dpi 75 -modes window -theme='style-2'
bindsym $alt+r exec '/data/data/com.termux/files/home/.config/rofi/launchers/type-1/launcher.sh'

# disable system tray
bar {
    tray_output none
}

